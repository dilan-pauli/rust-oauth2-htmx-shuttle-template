{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "watch -qcx 'shuttle run'",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo watch"
		},
	]
}